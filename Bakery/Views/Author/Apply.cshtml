@model ApplyFormModel

<link href="~/css/applayForJob.css" rel="stylesheet">

@{
    ViewData["Title"] = "Apply Author";
}

<div class="container applay-forjob">
  <div class="row mx-0 justify-content-center">
    <div class="col-md-7 col-lg-5 px-lg-2 col-xl-4 px-xl-0 px-xxl-3">
      <form
        method="POST" class="w-100 rounded-1 p-4 border bg-white" action="https://herotofu.com/start" enctype="multipart/form-data">
        <label asp-for="@Model.FullName" class="d-block mb-4">          
          <input asp-for="@Model.FullName" required name="name" type="text" class="form-control" placeholder="Vqra Bakery"/>
          <span asp-validation-for="@Model.FullName" class="form-label d-block">Your name</span>
        </label>

        <label asp-for="@Model.Email" class="d-block mb-4">          
          <input asp-for="@Model.Email" required name="email" type="email" class="form-control" placeholder="vqra@example.com"/>
          <span asp-validation-for="@Model.Email" class="form-label d-block">Email address</span>
        </label>

         <label class="d-block mb-4">
          <span class="form-label d-block">Phone</span>
          <input
            required name="phone" type="phone" class="form-control" placeholder="+359888112233"
          />
        </label>

        <label class="d-block mb-4">
          <span class="form-label d-block">Years of experience</span>
          <select required name="experience" class="form-select">
            <option>Less than a year</option>
            <option>1 - 2 years</option>
            <option>2 - 4 years</option>
            <option>4 - 7 years</option>
            <option>7 - 10 years</option>
            <option>10+ years</option>
          </select>
        </label>

        <label class="d-block mb-4">
          <span class="form-label d-block">Tell us more about yourself</span>
          <textarea
            name="message" class="form-control" rows="3"  placeholder="What motivates you?"  ></textarea>
        </label>

        <label class="d-block mb-4">
          <span class="form-label d-block">Your CV</span>
          <input required name="cv" type="file" class="form-control" />
        </label>

