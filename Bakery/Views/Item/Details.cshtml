@model DetailsViewModel
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
<link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Details Item";
}
<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">

                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1"><img src="@Model.ImageUrl" /></div>
                        <div class="tab-pane" id="pic-2"><img src="http://placekitten.com/400/252" /></div>
                        <div class="tab-pane" id="pic-3"><img src="http://placekitten.com/400/252" /></div>
                        <div class="tab-pane" id="pic-4"><img src="http://placekitten.com/400/252" /></div>
                        <div class="tab-pane" id="pic-5"><img src="http://placekitten.com/400/252" /></div>
                    </div>

                    @*<ul class="preview-thumbnail nav nav-tabs">
                        <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
                        <li><a data-target="#pic-2" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
                        <li><a data-target="#pic-3" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
                        <li><a data-target="#pic-4" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
                        <li><a data-target="#pic-5" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
                        </ul>*@
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.Name</h3>
                    <h4 class="product-category">@Model.Category</h4>
                    <div class="rating">
                        <div class="stars">
                            @for (var i = 0; i < 5; i++)
                            {
                                if (i <= Model.VoteCount - 1)
                                {
                                    <span class="fa fa-star checked"></span>
                                }
                                else
                                {
                                    <span class="fa fa-star"></span>
                                }
                            }

                            @* <form method="post">
                                <div class="row col-small">
                                <a asp-controller="Item" asp-action="Vote" asp-route-id="@Model.Id" class="btn btn-warning ">Vote</a>
                                <div class="form-group">
                                <label asp-for="Vote"></label>
                                <input asp-for="Vote" class="form-control" placeholder="Baking name">
                                <span asp-validation-for="Vote" class="small text-danger"></span>
                                </div>
                                </div>
                                </form>*@

                            <form class="row g-2">
                                <div class="col-auto">
                                    <button asp-controller="Item" asp-action="Vote" asp-route-id="@Model.Id" type="submit" class="btn btn-warning mb-3">Vote</button>
                                </div>
                               @* <div class="col-auto">
                                    <input asp-for="Vote" class="form-control">
                                    <span asp-validation-for="Vote" class="small text-danger"></span>
                                </div>*@
                                <div class="col-auto">                                    
                                    <select asp-for="Vote" class="form-control">                                        
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>                                        
                                    </select>
                                </div>
                            </form>

                            @*<span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>*@
                        </div>
                        <span class="review-no">41 reviews</span>
                    </div>
                    <p class="product-description">@Model.Description</p>
                    <div style="margin-bottom: 30px;">Тhe product is made from the following ingredients: @String.Join(", ", Model.Ingridients.Select(i => i.Name))</div>
                    <h4 class="price">current price: <span>@Model.Price $</span></h4>
                    <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
                    @*<h5 class="sizes">sizes:
                        <span class="size" data-toggle="tooltip" title="small">s</span>
                        <span class="size" data-toggle="tooltip" title="medium">m</span>
                        <span class="size" data-toggle="tooltip" title="large">l</span>
                        <span class="size" data-toggle="tooltip" title="xtra large">xl</span>
                        </h5>*@
                    @*<h5 class="colors">colors:
                        <span class="color orange not-available" data-toggle="tooltip" title="Not In store"></span>
                        <span class="color green"></span>
                        <span class="color blue"></span>
                        </h5>*@



                    <div class="action">
                        <a class="add-to-cart btn btn-default" asp-controller="Order" asp-action="Add" asp-route-id="@Model.Id" type="button">add to cart</a>
                        @*<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
