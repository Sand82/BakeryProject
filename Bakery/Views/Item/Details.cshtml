@model DetailsViewModel

@{
    ViewData["Title"] = "Details Item";
}

<div class="container">
    <div class="row ">
        <img src="@Model.ImageUrl" class="img-fluid d-block w-100" alt="Responsive image">
        <div class="">
            <h4 class="text-center">@Model.Name - @Model.Price $</h4>
            <div class="row gx-5">
                <div class="col">
                    <div class="p-3 border bg-light">@Model.Description</div>
                </div>
            </div>
            <ul class="list-group list-group-flush">
                Ingridients:
                @foreach (var item in @Model.Ingridients)
                {
                    <li class="list-group-item col-md-3">@item.Name</li>
                }
            </ul>
        </div>
    </div>
</div>