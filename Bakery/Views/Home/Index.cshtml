@model CountViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="titles">Welcome to my Bakery</h1>

<div class=container>
    <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active img-fluid" data-bs-interval="10000">
                <img src="~/Images/one.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item img-fluid" data-bs-interval="2000">
                <img src="~/Images/next3.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item img-fluid">
                <img src="~/Images/next4.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="text-center" style="margin-top: 15px;">
    <div class="col-md-4 offset-md-4">
        <p>We have:</p>
        <ul class="list-group">
            <li class="list-group-item bg-light">Products count: @Model.ProductCount</li>
            <li class="list-group-item bg-light">Ingredient count: @Model.IngredientCount</li>
        </ul>            
    </div>
</div>

<div class="conteiner">
    <h5 class="titles">Our New Recipes</h5>
    <h3 class="titles">Fresh from the Kitchen</h3>
    <div class="row">
        @foreach (var item in Model.IndexViewModel)
        {

            <div class="card" style="width: 18rem;">
                <img src=@item.ImageUrl class="card-img-top embed-responsive-item" style="width: 100%; height: 15vw;object-fit: cover;" alt="">
                <div class="card-body">
                    <h4 class="card-title">@item.Name - @item.Price $</h4>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a asp-controller="Bakery" asp-action="Details" id="@item.Id" class="btn btn-primary">View more</a>
                </div>
            </div>
        }
    </div>
</div>

