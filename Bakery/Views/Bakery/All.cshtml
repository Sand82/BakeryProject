@model AllProductQueryModel

@{
    ViewData["Title"] = "All Bake";
}

<form method="get">
    <div class="row mb-5">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="SearchTerm"></label>
                <input asp-for="SearchTerm" class="form-control" placeholder="">
                <input class="btn btn-primary" type="submit" value="Submit">
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>New product</option>
                    <option value="1">Price</option>
                    <option value="2">Name</option>
                </select>
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalProduct / AllProductQueryModel.ProductPerPage);
}

<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage  == 1 ? "disabled" : string.Empty)"
           asp-controller="Bakery"
           asp-action="All"
           asp-route-currentPage="@(previousPage)"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-products="@Model.Products"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-end @(Model.CurrentPage  == maxPage ? "disabled" : string.Empty)"
           asp-controller="Bakery"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-products="@Model.Products"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>
@if(!Model.Products.Any())
{
    <h2 class="text-center">No products fount!</h2>
}


@if(Model.Products.Count() != 0)
{
    <div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="card" style="width: 18rem;">
            <img src=@item.ImageUrl class="card-img-top embed-responsive-item" style="width: 100%; height: 15vw;object-fit: cover;" alt="">
            <div class="card-body">
                <h4 class="card-title">@item.Name - @item.Price $</h4>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a asp-controller="Item" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View more</a>
            </div>
        </div>
    }
</div>
}






