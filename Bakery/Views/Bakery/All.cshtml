@model AllProductQueryModel

@{
    ViewData["Title"] = "All Bake";
}

<form method="get">
    <div class="row mb-5">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="SearchTerm"></label>
                <input asp-for="SearchTerm" class="form-control" placeholder="">
                <input class="btn btn-primary" type="submit" value="Submit">
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>New product</option>
                    <option value="1">Price</option>
                    <option value="2">Name</option>
                </select>
            </div>
        </div>
    </div>
</form>

<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="card" style="width: 18rem;">
            <img src=@item.ImageUrl class="card-img-top embed-responsive-item" style="width: 100%; height: 15vw;object-fit: cover;" alt="">
            <div class="card-body">
                <h4 class="card-title">@item.Name - @item.Price $</h4>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a asp-controller="Bakery" asp-action="Details" id="@item.Id" class="btn btn-primary">View more</a>
            </div>
        </div>
    }
</div>




